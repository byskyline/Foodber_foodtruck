<p id="notice"><%= notice %></p>

<h1>Listing Food Trucks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @food_trucks.each do |f| %>
      <tr>
        <td><%= f.name %></td>
        <td><%= f.longitude %></td>
        <td><%= f.latitude %></td>

        <td>
         <% if f.picture.exists? %>
          <%= image_tag(f.picture.url(:medium))%>
         <% else %>
          None
         <% end %>
        </td>
        <td><%= link_to 'Show', food_truck_path(f) %></td>
        <td><%= link_to 'Food', food_truck_foods_path(f)%></td>
        <td><%= link_to 'Edit', edit_food_truck_path(f) %></td>
        <td><%= link_to 'Destroy', f, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Food truck', new_food_truck_path %>

<%= paginate @food_trucks %>
